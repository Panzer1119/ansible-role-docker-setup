[Unit]
Description=zfs plugin
After=zfs-mount.service zfs-import-cache.service
Before=docker.service
Requires=zfs-mount.service zfs-import-cache.service

ConditionPathIsMountPoint="/{{ docker_zfs_pool_name }}/{{ docker_volume_plugin_zfs_dataset_name }}"

[Service]
ExecStart=/usr/local/bin/docker-zfs-plugin --dataset-name "{{ docker_zfs_pool_name }}/{{ docker_volume_plugin_zfs_dataset_name }}"

[Install]
WantedBy=docker.service
